<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gpaapp.CourseEntryController"
            stylesheets="@style.css">

    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <padding>
                <Insets topRightBottomLeft="16"/>
            </padding>
            <Label text="Add Your Courses" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets topRightBottomLeft="16"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints minWidth="140" halignment="RIGHT"/>
                <ColumnConstraints minWidth="260" hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Course Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="courseName" promptText="e.g., Data Structures" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Course Code:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="courseCode" promptText="e.g., CSE2201" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Course Credit:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="courseCredit" promptText="e.g., 3.0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Teacher 1:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="teacher1" promptText="e.g., Dr. Rahman" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Teacher 2:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="teacher2" promptText="e.g., Prof. Akter" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Grade:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <ComboBox fx:id="gradeBox" prefWidth="220" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Student Roll:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextField fx:id="studentRoll" promptText="e.g., 20230001" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="Student Name:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <TextField fx:id="studentName" promptText="e.g., Md. Ali Hasan" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
        </GridPane>
    </center>

    <right>
        <VBox spacing="8" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="16" right="16" bottom="16" left="0"/>
            </padding>
            <Label text="Courses Added" style="-fx-font-weight: bold;"/>
            <TableView fx:id="table" prefWidth="720" prefHeight="380">
                <columns>
                    <TableColumn text="Course" prefWidth="140">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Code" prefWidth="90">
                        <cellValueFactory>
                            <PropertyValueFactory property="code"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Credit" prefWidth="70">
                        <cellValueFactory>
                            <PropertyValueFactory property="credit"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Teacher 1" prefWidth="120">
                        <cellValueFactory>
                            <PropertyValueFactory property="teacher1"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Teacher 2" prefWidth="120">
                        <cellValueFactory>
                            <PropertyValueFactory property="teacher2"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Grade" prefWidth="70">
                        <cellValueFactory>
                            <PropertyValueFactory property="grade"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Roll" prefWidth="100">
                        <cellValueFactory>
                            <PropertyValueFactory property="studentRoll"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Student Name" prefWidth="150">
                        <cellValueFactory>
                            <PropertyValueFactory property="studentName"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </right>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="12" right="16" bottom="16" left="16"/>
            </padding>
            <Button text="Add Course" onAction="#addCourse"/>
            <Button text="Update Selected" onAction="#updateCourse"/>
            <Button text="Delete Selected" onAction="#deleteCourse"/>
            <Button fx:id="calcBtn" text="Calculate GPA" onAction="#calculateGPA" disable="true"/>
        </HBox>
    </bottom>
</BorderPane>